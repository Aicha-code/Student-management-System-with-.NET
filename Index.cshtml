@model IEnumerable<StudentApp.Models.Student>

<h2>Student List</h2>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>RegNo</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.RegNo</td>
                <td>@student.Grade</td>
                <td>
                   <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@student.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Student</a>
